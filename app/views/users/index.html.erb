<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <% unless user.id == current_user.id %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6" style="width: 13%;">
        <p class="image"><%= profile_img(user) %></p>
        <p><%= user.name %></p>
        <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
        <%= render 'follow_form', user: user %>
      </div>
      <% end %>
  <% end %>
</div>
